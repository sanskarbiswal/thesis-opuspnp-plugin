<form>
    <div>
        <h3>Component Feeder</h1>
        <h4>Feeder-Next Location</h4>
        <div class="Row">
            <div class="Column">
                X
                <input type="number" name="feederNextX" data-bind="value: settings.plugins.OpusPnP.feeder_next_X">
            </div>
            <div class="Column">
                Y
                <input type="number" name="feederNextY" data-bind="value: settings.plugins.OpusPnP.feeder_next_Y">
            </div>
            <div class="Column">
                <button class="btn_basic" id="fetch_next_XY">Get Location</button>
            </div>
        </div>
        <h4>Feeder-Pick Location</h4>
        <div class="Row">
            <div class="Column">
                X
                <input type="number" name="feederPickX" data-bind="value: settings.plugins.OpusPnP.feeder_pick_X">
            </div>
            <div class="Column">
                Y
                <input type="number" name="feederPickY" data-bind="value: settings.plugins.OpusPnP.feeder_pick_Y">
            </div>
            <div class="Column">
                <button class="btn_basic" id="fetch_pick_XY">Get Location</button>
            </div>
        </div>
        <div class="Row">
            <div class="Column">Z1 - Feed New Component</div>
            <input type="number" name="feeder_next_Z" class="Column" data-bind="value: settings.plugins.OpusPnP.feeder_next_Z">
            <button class="btn_basic" id="fetch_next_Z">Get Z1 Location</button>
        </div>
        <div class="Row">
            <div class="Column">Z2 - Pick New Component</div>
            <input type="number" name="feeder_pick_Z" class="Column" data-bind="value: settings.plugins.OpusPnP.feeder_pick_Z">
            <button class="btn_basic" id="fetch_pick_Z">Get Z2 Location</button>
        </div>
        <div class="Row">
            <div class="Column">Z3 - Place New Component</div>
            <input type="number" name="feeder_place_Z" class="Column" data-bind="value: settings.plugins.OpusPnP.feeder_place_Z">
            <button class="btn_basic" id="fetch_place_Z">Get Z3 Location</button>
        </div>
        <div class="Row">
            <div class="Column">Z0 - Return to Home</div>
            <input type="number" name="feeder_home_Z" class="Column" data-bind="value: settings.plugins.OpusPnP.feeder_home_Z">
            <button class="btn_basic" id="fetch_home_Z">Get Z0 Location</button>
        </div>
        <div class="Row">
            <div class="Column">Feeder Pitch (Offset)</div>
            <input type="number" name="feeder_offset" data-bind="value: settings.plugins.OpusPnP.feeder_offset">
        </div>
        <hr>
        <h3>Camera Position</h3>
        <div class="Row">
            <div class="Column">
                X
                <input type="number" name="cameraX" data-bind="value: settings.plugins.OpusPnP.camera_X">
            </div>
            <div class="Column">
                Y
                <input type="number" name="cameraY" data-bind="value: settings.plugins.OpusPnP.camera_Y">
            </div>
            <div class="Column">
                Z
                <input type="number" name="cameraZ" data-bind="value: settings.plugins.OpusPnP.camera_Z">
            </div>  
        </div>
    </div>
</form>